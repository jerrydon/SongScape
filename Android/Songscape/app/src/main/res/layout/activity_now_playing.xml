<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/now_playing_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_left_arrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:padding="10dp"
            android:background="@drawable/selector"
            android:src="@mipmap/ic_left_arraow" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pgr_moods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollIndicators="bottom"
            android:scrollbarSize="5dp"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="horizontal"></android.support.v4.view.ViewPager>

        <ImageView
            android:id="@+id/imv_right_arrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:padding="10dp"
            android:background="@drawable/selector"
            android:src="@mipmap/ic_right_arraow" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="20dp">

        <ImageView

            android:id="@+id/imv_mood_imgs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:padding="@dimen/moods_img_padding" />


        <com.toobler.songscape.circular_seekBar.CircularSeekBar
            android:id="@+id/circularSeekBar1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="false"
            android:progressDrawable="@drawable/seekbar_bg"
            android:thumb="@android:drawable/alert_dark_frame"
            app:circle_color="@color/now_playing_bg_gradent"
            app:circle_progress_color="@color/seekbar_color"
            app:max="100"
            app:pointer_color="@color/seekbar_color"
            app:pointer_halo_color="@color/seekbar_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mix_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0%"
                android:textColor="@android:color/white"
                android:textSize="55sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_mix_place_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="MIX"
                android:textColor="@android:color/white"

                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/music_seek"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:progressDrawable="@drawable/seekbar_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_current_position"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:text="11.00"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_total_position"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="15dp"
                android:text="11.00"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_song_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.2"
        android:ellipsize="end"
        android:gravity="center|top"
        android:lines="1"
        android:padding="5dp"
        android:scrollHorizontally="true"
        android:text="this demo"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/btn_previous"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_previous" />

        <ImageView
            android:id="@+id/btn_play"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@android:color/transparent"
            android:src="@android:color/transparent"

            />

        <ImageView
            android:id="@+id/btn_next"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"

            android:src="@mipmap/ic_next"
            android:text="" />
    </LinearLayout>


</LinearLayout>
